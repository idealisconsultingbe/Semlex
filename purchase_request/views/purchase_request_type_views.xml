<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree views -->
    <record id="purchase_request_type_view_tree" model="ir.ui.view">
        <field name="name">purchase.request.type.view.tree</field>
        <field name="model">purchase.request.type</field>
        <field name="arch" type="xml">
            <tree string="Request Type">
                <field name="name"/>
                <field name="operation_type"/>
                <field name="stock_picking_type_id"/>
            </tree>
        </field>
    </record>

    <!-- Form views -->
    <record id="purchase_request_type_view_form" model="ir.ui.view">
        <field name="name">purchase.request.type.view.form</field>
        <field name="model">purchase.request.type</field>
        <field name="arch" type="xml">
            <form string="Purchase Request Type" delete="0">
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h2>
                        <field name="name" class="oe_inline"/>
                    </h2>
                    <span class="o_form_label">Operation type</span>
                    <div class="text-muted">
                        Operation type generated by the purchase request
                    </div>
                     <div class="content-group">
                        <field name="operation_type" class="o_light_label mt16" widget="radio"/>
                    </div>
                    <group>
                        <field name="stock_picking_type_id"  attrs="{'invisible': [('operation_type', '!=', 'po_stock')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="purchase_request_type_action" model="ir.actions.act_window">
        <field name="name">Request Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.request.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>